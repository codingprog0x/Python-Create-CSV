import csvimport sysclass CreateCSVFile:	def __init__(self, file_name = None,  file_path = None):		#####		## Check to see whether file name was provided		#####		if file_name != None:			file_name_list = list(file_name)			file_ext = file_name_list				for x in range(len(file_name_list) - 3):			file_ext[x] = ""		file_ext = "".join(file_ext)		print("File extension is %s" % file_ext)				if file_ext != "csv":			print("File extension needs to be 'csv'")			exit()				self.file_name = file_name				if file_path != None:			self.file_path = file_path		else:			self.file_path = "./"	def write_row(self, to_write):		if not isinstance(to_write, list):			print("A list needs to be passed")			return 0					with open(self.file_path + self.file_name, "ab") as csv_file:			csv_write = csv.writer(csv_file)			csv_write.writerow(to_write)		return 1
